                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Создано",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Patient"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Валидация"
                    }
                }
            }
        },
        "/api/patients/{id}": {
            "get": {
                "tags": [
                    "Patients"
                ],
                "summary": "Показать пациента",
                "description": "Показать пациента",
                "operationId": "patientsShow",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Patient"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Не найден"
                    }
                }
            },
            "put": {
                "tags": [
                    "Patients"
                ],
                "summary": "Обновить пациента",
                "description": "Обновить пациента",
                "operationId": "patientsUpdate",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/PatientUpdate"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Patient"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Не найден"
                    },
                    "422": {
                        "description": "Валидация"
                    }
                }
            },
            "delete": {
                "tags": [
                    "Patients"
                ],
                "summary": "Удалить пациента",
                "description": "Удалить пациента",
                "operationId": "patientsDestroy",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Удалено"
                    },
                    "404": {
                        "description": "Не найден"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Appointment": {
                "required": [
                    "id",
                    "patient_id",
                    "doctor_name",
                    "specialization",
                    "date_time"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 10
                    },
                    "patient_id": {
                        "description": "ID пациента",
                        "type": "integer",
                        "example": 1
                    },
                    "doctor_name": {
                        "type": "string",
                        "example": "Иванов С. П."
                    },
                    "specialization": {
                        "type": "string",
                        "example": "Терапевт"
                    },
                    "date_time": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-11-01T14:30:00+05:00"
                    },
                    "appointment_status_id": {
                        "type": "integer",
                        "example": 1,
                        "nullable": true
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            },
            "AppointmentResource": {
                "properties": {
                    "data": {
                        "$ref": "#/components/schemas/Appointment"
                    }
                },
                "type": "object"
            },
            "AppointmentCollection": {
                "properties": {
                    "data": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Appointment"
                        }
                    },
                    "links": {
                        "$ref": "#/components/schemas/PaginationLinks"
                    },
                    "meta": {
                        "$ref": "#/components/schemas/PaginationMeta"
                    }
                },
                "type": "object"
            },
            "AppointmentCreate": {
                "required": [
                    "patient_id",
                    "doctor_name",
                    "specialization",
                    "date_time"
                ],
                "properties": {
                    "patient_id": {
                        "type": "integer",
                        "example": 1
                    },
                    "doctor_name": {
                        "type": "string",
                        "maxLength": 255,
                        "example": "Иванов С. П."
                    },
                    "specialization": {
                        "type": "string",
                        "maxLength": 255,
                        "example": "Терапевт"
                    },
                    "date_time": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-11-01 14:30:00"
                    }
                },
                "type": "object"
            },
            "AppointmentUpdate": {
                "properties": {
                    "patient_id": {
                        "type": "integer",
                        "example": 1
                    },
                    "doctor_name": {
                        "type": "string",
                        "maxLength": 255,
                        "example": "Иванов С. П."
                    },
                    "specialization": {
                        "type": "string",
                        "maxLength": 255,
                        "example": "Терапевт"
                    },
                    "date_time": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-11-02 10:00:00"
                    }
                },
                "type": "object"
            },
            "Patient": {
                "required": [
                    "id",
                    "first_name",
                    "last_name",
                    "birth_date",
                    "gender"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "first_name": {
                        "type": "string",
                        "example": "Ivan"
                    },
                    "last_name": {
                        "type": "string",
                        "example": "Ivanov"
                    },
                    "full_name": {
                        "type": "string",
                        "example": "Ivanov Ivan"
                    },
                    "birth_date": {
                        "type": "string",
                        "format": "date",
                        "example": "1990-05-10"
                    },
                    "gender": {
                        "type": "string",
                        "enum": [
                            "male",
                            "female"
                        ],
                        "example": "male"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            },
            "PatientResource": {
                "properties": {
                    "data": {
                        "$ref": "#/components/schemas/Patient"
                    }
                },
                "type": "object"
            },
            "PatientCollection": {
                "properties": {
                    "data": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Patient"
                        }
                    },
                    "links": {
                        "$ref": "#/components/schemas/PaginationLinks"
                    },
                    "meta": {
                        "$ref": "#/components/schemas/PaginationMeta"
                    }
                },
                "type": "object"
            },
            "PatientCreate": {
                "required": [
                    "first_name",
                    "last_name",
                    "birth_date",
                    "gender"
                ],
                "properties": {
                    "first_name": {
                        "type": "string",
                        "maxLength": 255,
                        "example": "Ivan"
                    },
                    "last_name": {
                        "type": "string",
                        "maxLength": 255,
                        "example": "Ivanov"
                    },
                    "birth_date": {
                        "type": "string",
                        "format": "date",
                        "example": "1990-05-10"
                    },
                    "gender": {
                        "type": "string",
                        "enum": [
                            "male",
                            "female"
                        ],
                        "example": "male"
                    }
                },
                "type": "object"
            },
            "PatientUpdate": {
                "properties": {
                    "first_name": {
                        "type": "string",
                        "maxLength": 255,
                        "example": "Ivan"
                    },
                    "last_name": {
                        "type": "string",
                        "maxLength": 255,
                        "example": "Petrov"
                    },
                    "birth_date": {
                        "type": "string",
                        "format": "date",
                        "example": "1991-01-01"
                    },
                    "gender": {
                        "type": "string",
                        "enum": [
                            "male",
                            "female"
                        ],
                        "example": "male"
                    }
                },
                "type": "object"
            },
            "PaginationLinks": {
                "properties": {
                    "first": {
                        "type": "string",
                        "nullable": true
                    },
                    "last": {
                        "type": "string",
                        "nullable": true
                    },
                    "prev": {
                        "type": "string",
                        "nullable": true
                    },
                    "next": {
                        "type": "string",
                        "nullable": true
                    }
                },
                "type": "object"
            },
            "PaginationMeta": {
                "properties": {
                    "current_page": {
                        "type": "integer",
                        "example": 1
                    },
                    "from": {
                        "type": "integer",
                        "example": 1,
                        "nullable": true
                    },
                    "last_page": {
                        "type": "integer",
                        "example": 1
                    },
                    "path": {
                        "type": "string",
                        "example": "http://localhost/api/patients"
                    },
                    "per_page": {
                        "type": "integer",
                        "example": 15
                    },
                    "to": {
                        "type": "integer",
                        "example": 1,
                        "nullable": true
                    },
                    "total": {
                        "type": "integer",
                        "example": 1
                    }
                },
                "type": "object"
            },
            "ErrorResponse": {
                "properties": {
                    "message": {
                        "type": "string"
                    },
                    "code": {
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "NotFoundResponse": {
                "type": "object",
                "example": {
                    "message": "Patient not found",
                    "code": "NOT_FOUND",
                    "errors": {
                        "ids": [
                            "999"
                        ]
                    }
                },
                "allOf": [
                    {
                        "$ref": "#/components/schemas/ErrorResponse"
                    },
                    {
                        "properties": {
                            "errors": {
                                "properties": {
                                    "ids": {
                                        "type": "array",
                                        "items": {
                                            "type": "string"
                                        }
                                    }
                                },
                                "type": "object"
                            }
                        },
                        "type": "object"
                    }
                ]
            },
            "ValidationErrorResponse": {
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "Validation failed"
                    },
                    "code": {
                        "type": "string",
                        "example": "VALIDATION_ERROR"
                    },
                    "errors": {
                        "type": "object",
                        "additionalProperties": {
                            "schema": "PatientSchemas",
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                },
                "type": "object"
            },
            "PatientSchemas": {
                "type": "array",
                "items": {
                    "type": "string"
                }
            }
        }
    },
    "tags": [
        {
            "name": "Appointments",
            "description": "Записи на приём"
        },
        {
            "name": "Patients",
            "description": "CRUD для пациентов"
        }
    ]
}